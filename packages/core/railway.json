{
    "build": {
        "buildCommand": "pnpm install --frozen-lockfile && pnpm build",
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "phases": {
                "setup": {
                    "nixPkgs": ["nodePackages.pnpm"]
                }
            }
        }
    },
    "deploy": {
        "healthcheckPath": "/health",
        "numReplicas": 1,
        "restartPolicyMaxRetries": 10,
        "restartPolicyType": "ON_FAILURE",
        "sleepApplication": true,
        "startCommand": "pnpm start"
    }
}
