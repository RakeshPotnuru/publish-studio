{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
        "phases": {
            "setup": {
                "nixPkgs": ["nodePackages.pnpm"]
            }
        }
    },
    "buildCommand": "pnpm install --frozen-lockfile && pnpm build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "pnpm start",
    "healthcheckPath": "/health",
    "sleepApplication": true,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}